<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.media.resizer.simple.class">Sonata\MediaBundle\Media\SimpleResizer</parameter>
        <parameter key="sonata.media.resizer.simple.adapter.mode">inset</parameter>
    </parameters>

    <services>
        <service id="sonata.media.adapter.gd" class="Imagine\Gd\Imagine"></service>
        <service id="sonata.media.adapter.imagick" class="Imagine\Gmagick\Imagine"></service>
        <service id="sonata.media.adapter.gmagick" class="Imagine\Imagick\Imagine"></service>
        
        <service id="sonata.media.resizer.simple" class="%sonata.media.resizer.simple.class%">
            <argument type="service" id="sonata.media.adapter.gd"></argument>
            <argument>%sonata.media.resizer.simple.adapter.mode%</argument>
        </service>
    </services>
    
</container>