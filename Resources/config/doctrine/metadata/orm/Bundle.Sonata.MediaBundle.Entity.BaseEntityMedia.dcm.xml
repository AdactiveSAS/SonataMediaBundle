<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Bundle\Sonata\MediaBundle\Entity\BaseEntityMedia">

        <field name="classname" type="string"   column="classname"  length="255"/>
        <field name="object_id" type="integer"  column="object_id"  />
        <field name="enabled"   type="boolean"  column="enabled"  default="false"  />
        <field name="is_main"   type="boolean"  column="is_main"  default="false"  />
        <field name="position"  type="integer"  column="position" default="0" />

        <field name="updated_at"          column="updated_at"     type="datetime" />
        <field name="created_at"          column="created_at"     type="datetime" />

    </mapped-superclass>
</doctrine-mapping>
