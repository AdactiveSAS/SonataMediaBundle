{% extends base_template %}

{% block title %}{{ media.name }}{% endblock %}

{% block content %}
    <h1>{{ media.name }} ({{ format }})</h1>

    <div>
        {% media media, format %}
    </div>

    <h2>Information</h2>
    <ul>
        <li>Size : {{ media.size }}</li>
        <li>Width : {{ media.width }}</li>
        <li>Height : {{ media.height }}</li>
        <li>Content Type : {{ media.contenttype }}</li>
        <li>Copyright : {{ media.copyright }}</li>
        <li>Author name : {{ media.authorname }}</li>
        <li>CDN : {% if media.cdnisflushable %}to be flushed{% else %} last flush at {{ media.cdnflushat|date}} {% endif %}</li>
    </ul>

    <h2>Formats</h2>
    <ul>
        <li><a href="{{ admin.generateUrl('view', { 'id' : media.id, 'format' : 'reference'}) }}">reference</li>

        {% for name, format in formats %}
            <li>
                <a href="{{ admin.generateUrl('view', { 'id' : media.id, 'format' : name}) }}">
                    {% thumbnail media, name %}
                    {{ name }}

                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}