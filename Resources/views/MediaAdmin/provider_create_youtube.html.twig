{% extends 'SonataMediaBundle:MediaAdmin:provider_create.html.twig' %}

{% block title %}{% trans 'title_add_youtube' from 'MediaBundle' %}{% endblock %}

{% block form %}
    <form method="POST" action="{{ admin.generateUrl('create', parameters) }}">
        {{ form_hidden(form) }}

        <p>
            {{ form_label(form.binaryContent) }} <br />
            {{ form_field(form.binaryContent, {'class' : 'title'}) }}
            {{ form_errors(form.binaryContent) }}
        </p>

        <input type="submit" value="{% trans 'btn_create' from 'MediaBundle' %}" />
    </form>

{% endblock %}
